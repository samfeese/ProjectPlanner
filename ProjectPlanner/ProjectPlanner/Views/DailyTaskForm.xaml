<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProjectPlanner.ViewModels"
             x:Class="ProjectPlanner.Views.DailyTaskForm"
             x:DataType="vm:DailyTaskFormViewModel"
             Title="DailyTaskForm">
    <ScrollView>
        <StackLayout Spacing="10">

            <Label Text="Term Name" HorizontalOptions="CenterAndExpand" WidthRequest="100"/>
            <Entry Text="{Binding TaskName}" HorizontalOptions="FillAndExpand" Margin="20,0"/>

            <Button Text="{Binding SaveButtonText}" Command="{Binding SaveTask}"  TextColor="White" Background="#1A5D7F"  Margin="20, 5, 20, 0" Padding="10"/>
            <Button Text="Delete Course" Command="{Binding DeleteTask}" IsVisible="{Binding IsDeleteVisible}" Background="#BE1E2D" TextColor="White"  Margin="20, 5, 20, 0" Padding="10" />
        </StackLayout>
    </ScrollView>
</ContentPage>