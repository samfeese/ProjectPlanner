<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ProjectPlanner.ViewModels"
             x:Class="ProjectPlanner.Views.SprintView"
             x:DataType="vm:SprintViewViewModel"
             Title="SprintView">
    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,1*,*">
        <StackLayout Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3" Orientation="Vertical" BackgroundColor="Pink">
            <BoxView Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Color="Azure"/>

            <Grid ColumnDefinitions="5*, *" Grid.Row="0">
                <Label Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding CurrentProject.Name}" HorizontalOptions="Center" VerticalOptions="Center" TextColor="Black" Padding="0, 10"/>
                <Button Grid.Column="1" Text="Sprint" Command="{Binding SprintViewBtn}"  HorizontalOptions="Fill" VerticalOptions="Center" FontSize="12" BackgroundColor="#008080" />
            </Grid>

        </StackLayout>
    </Grid>
</ContentPage>