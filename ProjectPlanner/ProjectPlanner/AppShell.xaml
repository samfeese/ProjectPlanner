<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProjectPlanner.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ProjectPlanner.ViewModels"
    xmlns:local="clr-namespace:ProjectPlanner.Views"
    xmlns:search="clr-namespace:ProjectPlanner"
    Shell.FlyoutBehavior="Disabled"
    Title="ProjectPlanner"
    Shell.BackgroundColor="#4682B4"
    Shell.TitleColor="White"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="LightGray"
    Shell.ForegroundColor="White">

    
    
    <Shell.ToolbarItems>
        <ToolbarItem Text="Home"
                     IconImageSource="home_icon.png"
                     Order="Primary"
                     Priority="0"
                     Clicked="OnNavigateHomeClicked" />
        
    </Shell.ToolbarItems>



    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" >

    </ShellContent>


</Shell>
